@model DTO.MedicineInformation

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mt-3">🩺 Create Medicine</h1>

<div class="wrapper mb-5">
    <div class="content">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm p-4">
                    <h4 class="card-title text-center text-primary mb-3">📝 Medicine Information</h4>
                    <hr />

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="MedicineId" class="form-label fw-bold">Medicine ID</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                <input asp-for="MedicineId" class="form-control" placeholder="Enter medicine ID" />
                            </div>
                            <span asp-validation-for="MedicineId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="MedicineName" class="form-label fw-bold">Medicine Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-pills"></i></span>
                                <input asp-for="MedicineName" class="form-control" placeholder="Enter medicine name" />
                            </div>
                            <span asp-validation-for="MedicineName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ActiveIngredients" class="form-label fw-bold">Active Ingredients</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-flask"></i></span>
                                <input asp-for="ActiveIngredients" class="form-control" placeholder="Enter active ingredients" />
                            </div>
                            <span asp-validation-for="ActiveIngredients" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ExpirationDate" class="form-label fw-bold">Expiration Date</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="ExpirationDate" type="date" class="form-control" />
                            </div>
                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DosageForm" class="form-label fw-bold">Dosage Form</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-capsules"></i></span>
                                <input asp-for="DosageForm" class="form-control" placeholder="Enter dosage form" />
                            </div>
                            <span asp-validation-for="DosageForm" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="WarningsAndPrecautions" class="form-label fw-bold">Warnings & Precautions</label>
                            <textarea asp-for="WarningsAndPrecautions" class="form-control" rows="3" placeholder="Enter warnings and precautions"></textarea>
                            <span asp-validation-for="WarningsAndPrecautions" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ManufacturerId" class="form-label fw-bold">Manufacturer</label>
                            <select asp-for="ManufacturerId" class="form-select" asp-items="ViewBag.ManufacturerId">
                                <option value="">Select Manufacturer</option>
                            </select>
                            <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
                            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

